{
    "extends": [
        "config:base",
        "group:allNonMajor",
        "schedule:monthly",
        ":automergePatch"
    ],
    "ignorePresets": [":prHourlyLimit2"],
    "rangeStrategy": "update-lockfile",
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["* 0-3 1 * *"]
    },
    "constraintsFiltering": "strict",
    "packageRules": [
        {
            "matchPackagePrefixes": ["symfony/"],
            "allowedVersions": "<8"
        }
    ]
}
